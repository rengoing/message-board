<%= form_for(@message) do |f| %>

  
<% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>

 <div class="form-group">
   <label class="col-sm-1 control-label" for="message_name">名前:</label>
   <div class="col-sm-11">
     <%= f.text_field :name , :placeholder => "名前を入力してください" ,class: "form-control" %>
   </div>
 </div>

 <div class="form-group">
   <label class="col-sm-1 control-label" for="message_body">内容:</label>
   <div class="col-sm-11">
       <%= f.text_area :body , :placeholder => "内容を入力してください", class: "form-control" %>
   </div>
 </div>
 
 <div class="form-group">
     <label class="col-sm-1 control-label" for="message_age">年齢:</label>
     <div class="col-sm-11">
        <%= f.text_field :age , :placeholder => "年齢を半角で入力してください", class: "form-control" %> 
     </div>
 </div>
 
 <div class="form-group">
   <div class="col-sm-offset-1 col-sm-11">
    <%= f.submit class: "btn btn-sm btn-primary" %>
   </div>
 </div>
 
<% end %>